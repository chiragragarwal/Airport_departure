#include<stdlib.h>
#include<stdio.h>
#include "VARIABLES.h"
void takeInputs()
{
	FILE *f = fopen("INPUT.txt","r");
	if(f == NULL)
	{
		printf("ERROR IN OPENING THE FILE\n");
		exit(1);
	}	
	/*
	extern int N,y;
	extern int i,j,t;	*/
	fscanf(f,"%d",&N);	
	
	
	for(y=0;y<N;y++)
	{
		fscanf(f,"%d",&user[y].ret_ticket);		//Return ticket flag	
	
		fscanf(f,"%s",user[y].entry_time);		//entry time
		fscanf(f,"%s",user[y].entry_date);		//entry date
	
		fscanf(f,"%s",user[y].ticket_no);
		fscanf(f,"%s",user[y].flight_no);
		fscanf(f,"%s",user[y].flight_time);
		fscanf(f,"%s",user[y].flight_date);
		fscanf(f,"%s",user[y].destination);
	
		if(user[y].ret_ticket==1)
		{
			fscanf(f,"%s",user[y].ret_ticket_no);
			fscanf(f,"%s",user[y].ret_flight_no);
			fscanf(f,"%s",user[y].ret_flight_time);
			fscanf(f,"%s",user[y].ret_flight_date);
			fscanf(f,"%s",user[y].ret_destination);	
		}
	
		fscanf(f,"%s",user[y].passport_no);
		fscanf(f,"%s",user[y].pass_expiry);
		fscanf(f,"%s",user[y].nationality);
	
		fscanf(f,"%s",user[y].VISA_expiry);
		fscanf(f,"%s",user[y].VISA_country);
	
		fscanf(f,"%s",user[y].first);
		fscanf(f,"%s",user[y].last);
		fscanf(f,"%s",user[y].gender);
		fscanf(f,"%d",&user[y].age);
	
		fscanf(f,"%d",&user[y].nBags);
	
		user[y].weight = (int *)malloc(user[y].nBags*sizeof(int));
		
		for(i=0;i<user[y].nBags;i++)
			fscanf(f,"%d",&user[y].weight[i]);	
	
		//Initialising contents	
		user[y].contents = malloc(user[y].nBags*sizeof(int *));	
		for(i=0;i<user[y].nBags;i++)
			user[y].contents[i] = (int *)malloc(10*sizeof(int));
		
		for(i=0;i<user[y].nBags;i++)
			for(j=0;j<10;j++)
			{
				fscanf(f,"%d",&t);
				user[y].contents[i][j] = t;
			}
	}	// END OF BIGGEST FOR LOOP
	
	fclose(f);
	return;
}

