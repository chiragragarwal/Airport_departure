#include <stdio.h>
#include <stdlib.h>

int search(int *s, int key, int Ls)
{
	int i;
	for(i=0;i<Ls;i++)
		if(s[i]==key)
			return 1;
		else if(s[i]==-1)
			return -1;
	return -1;
}

int palindrome(int n)
{
	int i,m=n,l=1;
	
	while(1)
		if(m/10 != 0)
		{
			l++;	//number of digits
			m = m/10;
		}
		else
			break;

	m = n;
	int *a;		//Storing digits in an array
	
	a = (int *)malloc(l*sizeof(int));
		
	for(i=0;i<l;i++)
	{	
		a[l-i-1] = m % 10;		
		m = m/10;
	}	
	
	for(i=0;i<(l/2);i++)
	{
		if(a[i]!=a[l-i-1])
			return -1;		
	}
	return 1;			
}


void main()
{
	int n,ret;
	printf("Enter a number : \n");
	scanf("%d",&n);
	
	ret = palindrome(n);
	if(ret>0)
		printf("\nThe number %d is a palindrome \n",n);
	else
		printf("\nThe number %d is NOT a palindrome \n",n);
	
	return;
}
